@using MVCapp.Models;
@model MVCapp.Models.Poll

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Poll</h4>
    <hr />
    <table class="table">
        <tr>
            <th scope="row">
                @Html.DisplayNameFor(model => model.Question)
            </th>
            <td>
                @Html.DisplayFor(model => model.Question)
            </td>
        </tr>
        <tr>
            <th scope="row">
                @Html.DisplayNameFor(model => model.Start)
            </th>
            <td>
                @Html.DisplayFor(model => model.Start)
            </td>
            <td></td>
        </tr>
        <tr>
            <th scope="row">
                @Html.DisplayNameFor(model => model.End)
            </th>
            <td>
                @Html.DisplayFor(model => model.End)
            </td>
            <td></td>
        </tr>
        <tr>
            <th scope="row">
                Szavazók száma:
            </th>
            <td>
                @Model.GetNumOfVoted()
            </td>
            <td>
                @{
                    float num = ((float)Model.GetNumOfVoted() / (float)@Model.Voters.Count) * 100;
                }
                @num.ToString("F") %
            </td>
        </tr>
        @foreach (Option item in Model.Options)
        {
            <tr>
                <th scope="row">
                    @item.Ans
                </th>
                <td>
                    @item.Votes
                </td>
                <td>
                    @{
                        float num2;
                        if (item.Votes == 0)
                        {
                            num2 = 0;
                        }
                        else
                        {
                            num2 = ((float)item.Votes / (float)Model.GetNumOfVoted()) * 100;
                        }
                    }
                    @num2.ToString("F") %
                </td>
            </tr>

        }
    </table>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
